/* pages/people/index.wxss */
.search{
 padding: 20rpx;
}

.search input{
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #ccc;
  border-radius: 20rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
}

.contents{
  display: flex;
  flex-direction: column;
}

.items{
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #ccc;
  padding: 20rpx;
}
.image{
  flex: 2;
}
.image image{
  width: 180rpx;
  height: 200rpx;
}
.txts{
  flex: 6;
  font-size: 32rpx;
  color: #ccc;
  padding: 10rpx 0 10rpx 20rpx;
}
.head{
  color: black;
  font-weight: bold;
}
.name{
  color: black;
  padding-top: 20rpx;
}
.name text{
  color: #d24a58;
  font-weight: bold;
}
.mag{
  font-size: 26rpx;
}